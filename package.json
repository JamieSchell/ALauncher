{
  "name": "modern-minecraft-launcher",
  "version": "1.0.0",
  "description": "Modern Minecraft Launcher with React and Electron",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "node scripts/run-script.js dev",
    "dev:backend": "node scripts/run-script.js dev-backend",
    "dev:frontend": "node scripts/run-script.js dev-frontend",
    "dev:old": "npm run build:shared && concurrently \"npm run dev:backend:old\" \"npm run dev:frontend:old\"",
    "dev:backend:old": "cd packages/backend && npm run dev",
    "dev:frontend:old": "cd packages/frontend && npm run dev",
    "prod": "node scripts/run-script.js prod",
    "prod:backend": "node scripts/run-script.js prod-backend",
    "prod:frontend": "node scripts/run-script.js prod-frontend",
    "build": "npm run build:shared && npm run build --workspaces",
    "build:shared": "cd packages/shared && npm run build",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "7zip-bin": "^5.2.0",
    "concurrently": "^9.2.1",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
