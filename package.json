{
  "name": "modern-minecraft-launcher",
  "version": "1.0.0",
  "description": "Modern Minecraft Launcher with React and Electron",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "node scripts/run-script.js dev",
    "dev:backend": "node scripts/run-script.js dev-backend",
    "dev:frontend": "node scripts/run-script.js dev-frontend",
    "prod": "node scripts/run-script.js prod",
    "prod:backend": "node scripts/run-script.js prod-backend",
    "prod:frontend": "node scripts/run-script.js prod-frontend",
    "build": "npm run build:shared && npm run build --workspaces",
    "build:shared": "cd packages/shared && npm run build",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "7zip-bin": "^5.2.0",
    "concurrently": "^9.2.1",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.3.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
