{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "ALauncher",
  "version": "1.0.0",
  "identifier": "com.alauncher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ALauncher",
        "label": "main",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "center": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "visible": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "freezePrototype": false,
      "dangerousDisableAssetCspModification": false,
      "devCsp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb", "rpm", "nsis", "msi", "dmg"],
    "createUpdaterArtifacts": false,
    "category": "Game",
    "shortDescription": "Modern Minecraft Launcher",
    "longDescription": "A modern Minecraft launcher with advanced features and capabilities.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": ["en-US", "ru-RU"]
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "languages": ["English", "Russian"],
        "displayLanguageSelector": true
      },
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "macOS": {
      "entitlements": null,
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "10.13"
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libappindicator3-1"]
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "resources": [],
    "externalBin": []
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": ["^/devtools$", "^/alauncher$", "^/appimage$", "^/usr/bin/.*alauncher.*"]
    }
  }
}
