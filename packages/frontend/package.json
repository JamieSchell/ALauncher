{
  "name": "@modern-launcher/frontend",
  "version": "1.0.135",
  "description": "Modern Minecraft Launcher - Electron Frontend",
  "author": "Modern Launcher Team",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "prebuild": "node scripts/increment-version.js",
    "build": "vite build",
    "postbuild": "node scripts/update-launcher-version.js",
    "build:electron": "node scripts/increment-version.js && vite build && electron-builder",
    "build:packager": "node scripts/increment-version.js && node scripts/clean-release.js && vite build && electron-packager . --platform=win32 --arch=x64 --out=release --overwrite --asar && node scripts/update-launcher-version.js",
    "build:installer": "node scripts/increment-version.js && node scripts/clean-release.js && vite build && electron-builder --win nsis && node scripts/update-launcher-version.js",
    "build:portable": "node scripts/increment-version.js && node scripts/clean-release.js && vite build && electron-builder --win portable && node scripts/update-launcher-version.js",
    "update-launcher": "node scripts/update-launcher-full.js",
    "update-launcher:win": "node scripts/update-launcher-full.js",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "node scripts/increment-version.js && vite build && electron-builder"
  },
  "dependencies": {
    "@modern-launcher/shared": "*",
    "@tanstack/react-query": "^5.17.9",
    "axios": "^1.6.5",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "mysql2": "^3.15.3",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "uuid": "^13.0.0",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.launcher.modern",
    "productName": "Modern Launcher",
    "electronVersion": "28.1.3",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "dist",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}.${ext}",
      "sign": false,
      "signingHashAlgorithms": [],
      "verifyUpdateCodeSignature": false,
      "publisherName": "Modern Launcher Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Modern Launcher",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Games",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "warningsAsErrors": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.games"
    }
  }
}
